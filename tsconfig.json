{
  "compilerOptions": {
    "target": "ES6",                          // ES6 ensures modern JavaScript features are supported
    "module": "commonjs",                     // CommonJS is standard for Node.js
    "outDir": "./dist",                       // Output directory for compiled files
    "rootDir": "./src",                       // Root directory for source files
    "strict": true,                           // Enable all strict type-checking options
    "esModuleInterop": true,                  // Allow default imports from CommonJS modules
    "skipLibCheck": true,                     // Skip type checking for dependencies
    "forceConsistentCasingInFileNames": true, // Enforce file name casing consistency
    "sourceMap": true,                        // Generate source maps for debugging
    "moduleResolution": "node",              // Use Node.js resolution strategy
    "resolveJsonModule": true,                // Enable importing JSON modules
    "allowSyntheticDefaultImports": true ,    // Allow default imports with Babel/Webpack
     "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": ["src"],                         // Include the source folder
  "exclude": ["node_modules", "dist"]         // Exclude unnecessary folders
}
